<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Bakers Unite</title>
</head>

<body>
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Bakers Unite</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/addProduct">Add new product</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <div class="container">
    <br>
    <div class="text-center">
      <h2>Products from Items Database</h2>
    </div>
    <br>

    <table class="table table-hover small text-center">
      <thead>
        <tr>
          <th width="100">Product Name</th>
          <th width="100">Product Image</th>
          <th width="50">Type</th>
          <th width="50">Price</th>
          <th width="50">Availability</th>
          <th width="50">Edit</th>
          <th width="50">Delete</th>
        </tr>
      </thead>
      <tbody>
        <% for(let i=0; i < products.length; i++) { %>
          <tr>
            <td>
              <%= products[i].product_name %></a>
            </td>
            <td><img src="images/<%= products[i].image %>" width="20%"></td>
            <td>
              <%= products[i].product_type %>
            </td>
            <td>$<%= products[i].product_price %>
            </td>
            <td>
              <%= products[i].product_availability %>
            </td>
            <!-- Edit Link -->
            <td><a href="/editProduct/<%= products[i].product_id %>">Edit</a></td>
            <!-- Delete Link -->
            <td><a href="/deleteProduct/<%= products[i].product_id %>" onclick="return confirm('Are you sure want to delete this product?')">Delete</a></td>
          </tr>
          <% } %>
      </tbody>
    </table>
  </div>
</body>

</html>